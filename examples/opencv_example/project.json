{
    "id": "opencv_example",
    "type": "application",
    "value": {
        "public": false,
        "use" : ["ouster_viz", "ouster_pcap", "ouster_client"],
        "language": "c++"
    },
    "lang.cpp": {
        "cxxflags": ["-Wno-deprecated-declarations"],
        "cpp-standard": "c++14",
        "include": [
            "/usr/include/eigen3",
            "/usr/include/opencv4"
        ],
        "lib": [
            "ouster_client", 
            "ouster_pcap", 
            "ouster_viz", 
            "opencv_core", "opencv_imgproc", "opencv_features2d", "opencv_imgcodecs", "opencv_highgui",
            "GLEW", "glfw", "GL", 
            "jsoncpp", "fmt", "tins", "pcap", "curl"
        ]
    }
}
